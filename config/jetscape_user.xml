<?xml version="1.0"?>

<jetscape>
  
  <nEvents> 1000000 </nEvents>
  
  <outputFilename>/scratch/user/cameron.parker/projects/JETSCAPE/test</outputFilename>
  <JetScapeWriterAsciiGZ> on </JetScapeWriterAsciiGZ>
  <finalHadsOnly> on </finalHadsOnly>
  
  <!-- Hard Process -->
  <Hard>
    <epemGun>
      <eCM>91.2</eCM>
      <LinesToRead>
         MultipartonInteractions:pT0Ref = 2.28
         MultipartonInteractions:ecmPow = 0.215
      </LinesToRead>
    </epemGun>
  </Hard>
  
  <!--Eloss Modules -->
  <Eloss>
    <maxT> 200 </maxT>
    <deltaT>0.1</deltaT>
    <lambdaQCD> 0.2 </lambdaQCD>
    
    <Matter> 
      <Q0>1</Q0>
      <QS> 0.9 </QS>
      <in_vac> 1 </in_vac>
      <vir_factor>0.25</vir_factor>
    </Matter>
  </Eloss>
  
  <!-- Jet Hadronization Module -->
  <JetHadronization>
    <name>hybrid</name>
    <eCMforHadronization>0</eCMforHadronization>
    <LinesToRead>
      StringFlav:probStoUD = 0.217
      StringFlav:probQQtoQ = 0.081
      ColourReconnection:reconnect = on
      ColourReconnection:mode = 2
    </LinesToRead>
    <tau0Max>20</tau0Max>
    <pythia_decays>on</pythia_decays> 
    <!--maximum energy level for mesons-->
    <reco_Mlevelmax>1</reco_Mlevelmax>
    <!--maximum energy level for baryons-->
    <reco_Blevelmax>1</reco_Blevelmax>
    <!-- Switch to include more pythia particles from an additional xml file with particle information -->
    <additional_pythia_particles>0</additional_pythia_particles>
    <!--switch for recombination biased by the time of the partons-->
    <recobias_t>1</recobias_t>
    <part_prop>0.0</part_prop>
    <reco_hadrons_in_pythia>1</reco_hadrons_in_pythia>
  </JetHadronization>
  
</jetscape>